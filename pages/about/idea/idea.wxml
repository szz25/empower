<!--pages/about/idea/idea.wxml-->
<view class='idea'>
  <view class='q-idea'>
  <view class="weui-cells__title">请输入您的邮箱，方便我们与您联系</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__bd">
          <input class="weui-input" bindinput='emailInput' placeholder="请输入邮箱" name="email"/>
        </view>
      </view>
    </view>
    <view class="weui-cells__title">描述您的问题</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell">
          <view class="weui-cell__bd">
            <textarea class="weui-textarea" bindinput='contentInput' placeholder="请输入" style="height: 3.3em" name="content"/>
            <view class="weui-textarea-counter">0/200</view>
          </view>
      </view>
    </view>
    
    <view class="weui-btn-area">
        <button class="weui-btn" type="primary" bindtap="showTopTips">确定</button>
    </view>
  </view>
</view>